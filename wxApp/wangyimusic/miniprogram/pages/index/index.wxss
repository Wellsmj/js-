page{
  background-color: #cdcdcd;
}
.flex-treble{
  flex:4;
}
.padding-sm {
  padding: 10rpx;
}
.nav .cu-item {
  line-height: 50rpx;
}
  /* .nav .cu-item{
    line-height: normal;
  } */
  .show{
    display: block
}
.hide{
    display: none;
    
}
.item{
    position: relative;
    padding: 20px 0;
    border-bottom: 1px solid;
    display:flex;
}
.avartar{
  background-color: rgb(245, 230, 230); 
  width: 54rpx;
  height: 54rpx;
  margin: 20rpx;
}
.contain{
    background-color: #cdcdcd; 
    flex:1;
}
.avartar image{
    display: block;
    width: 100%;
    height: 100%;
}
.photo{
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    overflow: hidden;
}
.photo-item{
    width: 80px;
    height: 80px;
    border-radius: 6px;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}
.photo-item image{
  display: block;
  width: 100%;
  height: 100%;
}
.contain .content .text,.contain .content .head,.contain .content .fan{
  margin-bottom: 20rpx;
}
.contain .content .text{
  color: blue
}
.content-bottom{
  width: 100%;
  display: flex;
}
.content-bottom-icon{
 display: flex;
  margin-right: 50rpx;
  margin-top: 50rpx;
}
.content-bottom-icon .icon{
   width: 36rpx;
  height: 36rpx;
}
.content-bottom-icon .icon image {
  width: 100%;
  height: 100%;
}
/* 侧边抽屉大小 */
.basis-lg{
  flex-basis: 80%;
  background-color: #708387;
  
}
/* 头像 */
.cu-list .avatar{
  margin-left: 30rpx;
  margin-top: 60rpx;
}
.cu-list .avatar image{
 width: 80px;
 height: 80px;
 border-radius: 50%;
}
.cu-list{
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.cu-list.menu>.cu-item{
  background-color: #708387;
}
.header{
  margin-left: 30rpx;
  display: flex;
  align-items: center;
}
.grade{
  margin-left: 30rpx;
  border: 1rpx solid #2b2c28;
  border-radius: 25px;

}
.grade text{
  color: #fff;
}
.btn{
  width: 150rpx;
  height: 80rpx;
  margin:auto 0;
  display: flex;
  justify-content: center; /*子元素水平居中*/
  align-items: center; /*子元素垂直居中*/
  display: -webkit-flex;
  position: absolute;
  right: 30rpx;
  border: 1rpx solid #b8b8b8;
  border-radius: 20px;
}
.sign{
  color: #fff;
  margin-left: 10rpx;
}
.img image{
  width: 40rpx;
  height: 40rpx;
}
.cu-item{
  margin-top: 30rpx;
}
.cu-item .icon image{
  width: 78rpx;
  height: 78rpx;
}
.cu-list.menu>.cu-item .content {
  font-size: 45rpx;
  color: #fff;
  margin-left: 60rpx;
}
.middle{
  margin-top: 46rpx;
  display: flex;
  justify-content: center; /*子元素水平居中*/
  align-items: center; /*子元素垂直居中*/
}
.middle .info,.bottom .night{
  flex: 1;
  text-align: center;
}
.middle .icon image,.bottom .night .icon image{
  width: 78rpx;
  height: 78rpx;
}
.middle .info .name,.bottom .night .name{
  margin-top: 10rpx;
  font-size: 34rpx;
  color: #fff;
}
.bottom{
  height: 100rpx;
  position:fixed;
  width:100%;
  bottom:0;
  z-index:1024;
  box-shadow:0 1rpx 6rpx rgba(0, 0, 0, 0.1);
  display: flex;
  border-top: 1px solid #fff;
  
}
.bottom .night {
  display: flex;
  justify-content: center; /*子元素水平居中*/
  align-items: center; /*子元素垂直居中*/
}
.bottom .night .name{
  font-size: 28rpx;
  margin-left: 10rpx;
}