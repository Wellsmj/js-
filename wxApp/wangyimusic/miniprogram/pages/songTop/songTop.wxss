/* miniprogram/pages/songTop/songTop.wxss */
page{
  background-color: #cdcdcd;
}
.songTop{
  position: relative;
  display: flex;
  flex-wrap: wrap;
  overflow: hidden;
  margin-left: 10rpx;
}
.songTop-item{
  margin-right: 10rpx;
  width: 100px;
  height: 100px;
  margin-bottom: 30px;
  border-radius: 6px;
}
.photo{
  position: relative;
  width: 100%;
  height: 100%;
}
.updateTime{
  position: absolute;
  bottom: 20rpx;
  color: white;
  left: 20rpx;
}
.title{
  font-size: 16px;
  color: white;
}